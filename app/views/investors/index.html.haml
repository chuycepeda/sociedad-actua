- if current_user.nil?
  %a.pull-right.btn.btn-default{:href => registration_new_path(user_type: "investor") }= "Registrate como inversionista"

%h1= "Inversionistas"

%p= "#{pluralize(Investor.count, "inversionista", "inversionistas")} #{"encontrado".pluralize(Investor.count)}"

-@investors.each do |e|
  .col-md-4.col-sm-6
    %a.no-decoration{:href => investor_path(e) }
      .thumbnail.investor-thumb
        .thumb
          %img.center-block{ src: e.logo.mid.url}
        .caption
          %h3.title= e.name
          %label= "Causas de Inter√©s"
          %p= truncate(e.causes_supported.to_a.join(", "), length: 120)
