.profile-section
  .container
    =image_tag "roles/collaborators_2x.png", :class => "profile-logo"
    %h1.inline.title= "Colaborador/#{@collaborator.type_collaborator}"

    .row
      .col-md-3.offset
        .frame.center-block
          %img.center-block.logo{:src => @collaborator.logo.mid.url }
      .col-md-8
        %h1.title= @collaborator.name

        %label= "Descripción"
        %p= @collaborator.description

        %label= "Causas de interés"
        %p= @collaborator.causes_interest.join(', ')

        %hr

        .row
          .col-md-6
            %label= "Sitio web:"
            #{@collaborator.site_url}
          .col-md-6
            %label= "Facebook:"
            #{@collaborator.facebook_url}
          .col-md-6
            %label= "Twitter:"
            #{@collaborator.twitter_url}
          .col-md-6
            %label= "Youtube:"
            #{@collaborator.youtube_url}
          .col-md-6
            %label= "Instagram:"
            #{@collaborator.instagram_url}
          .col-md-6
            %label= "Blog"
            #{@collaborator.blog_url}

        %hr

        %a.btn.btn-default= "Contactar"
